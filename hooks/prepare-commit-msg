#!/bin/bash

GIT_PARAMS_ARRAY=($@)
MSG_FILE=${GIT_PARAMS_ARRAY[0]}
COMMIT_MSG=`cat $MSG_FILE`
CHANGED=$(git diff --cached --name-only)

prepend_emoji () {
    EMOJI=$1
    COMMIT_MSG="$EMOJI $COMMIT_MSG"
}

has_pip () {
    if [[ $CHANGED == *"Pipfile"* ]]; then
        return 0
    else
        return 1
    fi
}

has_migrations () {
    if [[ $CHANGED == *"migrations"* ]]; then
        return 0
    else
        return 1
    fi
}

has_yarn () {
    if [[ $CHANGED == *"yarn.lock"* ]]; then
        return 0
    else
        return 1
    fi
}

if has_yarn; then
    prepend_emoji ðŸ§¶
fi

if has_migrations; then
    prepend_emoji ðŸ›¢
fi

if has_pip; then
    prepend_emoji ðŸ“¦
fi

echo "$COMMIT_MSG" > "$MSG_FILE"
